<view class="container">
  <view class="page-body">
    <view class="page-section page-section-gap">
      <swiper 
        indicator-dots="true" autoplay="true" circular="true" duration="1000" interval="2000">
        <block wx:for="{{swiperImage}}" wx:key="*this">
          <swiper-item>
            <image class="swiper-item" wx:if="{{swiperImage.length!=0}}" src="{{item}}"></image>
          </swiper-item>
        </block>
      </swiper>
    </view>

    <view class="page-section page-section-gap">
      <view class="page-section-searchHistory title">
        <view>最近浏览</view>
          <image class="deleteImage" src="../../images/delete.png" wx:if="{{searchHistory.length!=0}}" catchtap="clearSearchHistory"></image>
      </view>

      <view class="page-section-searchHistory" >
        <view wx:for="{{searchHistory}}" wx:key="searchHistoryItem">
        <view class="page-section-searchBox">
          <view class="page-section-item" bindtap="searchTap" id="{{index}}">{{item}}</view>
        </view>
        </view>
      </view>
    </view>
    
    <view class="page-section">
      <view class="page-section-item" wx:for="{{manufacturer_list}}" wx:key="manufacturer_list" bindtap="brandListTap" id="{{index}}">
        <view class="brandImageBox"><image class="brandImage" src="{{item.imagePath}}" mode="widthFix"></image></view>
        <text class="brandNameBox">{{item.manufacturer}}</text>
      </view>
    </view>
  </view>
</view>