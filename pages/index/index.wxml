<view class="container">
  <view class="searchHistoryContainer">
    <view class="searchHistoryTitle">
      <view class="searchHistoryTitleText">最近浏览</view>
        <image class="deleteImage" src="../../images/delete.png" wx:if="{{searchHistory.length!=0}}" catchtap="clearSearchHistory"></image>
    </view>

    <view class="searchHistoryList" >
      <view wx:for="{{searchHistory}}" wx:key="item">
      <view class="searchHistoryItemBox">
        <text class="searchHistoryItem">{{item}}</text>
      </view>
      </view>
    </view>
  </view>
  
  <view class="brandContainer">
    <view class="brandList" wx:for="{{manufacturer_list}}" bindtap="handleTap" id="{{index}}">
      <view class="brandImageContainer"><image class="brandImage" src="{{item.imagePath}}" mode="widthFix"></image></view>
      <text class="brandName">{{item.manufacturer}}</text>
    </view>
  </view>
</view>