.container{
  display:inline-block;
}
.topBrandContainer{
  height: 100%;
  top: 100rpx;
  display: block;
  position: relative;
}
.brandContainer{
  scroll-padding-top: 15%;
  overflow: auto;
  height: 75%;
  position:relative;
}
.brand{
  height: 100%;
  display: flex;
  align-items: center; 
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}
.list-container{
  padding: 0
}
.list-item{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx
}
.brandImage{
  width:100%;
}
.imageContainer{
  width:110rpx;
  height:110rpx;
}
.brandName{
  width: 550rpx;
  height: 110rpx;
  display: flex;
  line-height: 100rpx;
  font-family: "微软雅黑", Arial, sans-serif;
  border-bottom: 1rpx solid lightgrey;
}
.topSearchHistoryContainer{
  position:fixed;
  width: 100%;
  background-color: #f6f6f6;
  z-index: 2;
}
.searchHistoryContainer{
  width:100%;
  height:15%;
  white-space: nowrap;
}
.searchHistoryItemBox{
  width:fit-content;
  height:90%;
  border-radius:10px;
  background-color: gainsboro;
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  margin: 2%;
}
.searchHistoryItem{
  padding:15rpx;
  width:90%;
  height:100%;
  color: black;
  position: relative;
}


